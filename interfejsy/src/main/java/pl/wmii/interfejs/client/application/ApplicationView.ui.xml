<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:org.gwtbootstrap3.client.ui">
  <ui:style>

  </ui:style>

  <b:Container fluid="true">
    <b:Row>
      <b:Column size="MD_12" addStyleNames="header-panel">
        <g:SimplePanel ui:field="header" width="100%"
          height="75px"></g:SimplePanel>
      </b:Column>
      <b:Row>
        <b:Column size="MD_2">
          <b:Panel>
            <b:PanelHeader>
              <b:Heading size="H2" text="Menu" />
            </b:PanelHeader>
            <b:PanelBody>
              <g:ScrollPanel ui:field="menu" width="100%" />
            </b:PanelBody>
          </b:Panel>
        </b:Column>
        <b:Column size="MD_10">
          <b:Panel>
            <b:PanelHeader>
              <b:Heading size="H2" text="Content" />
            </b:PanelHeader>
            <b:PanelBody>
              <g:ScrollPanel ui:field="main">
              </g:ScrollPanel>
            </b:PanelBody>
          </b:Panel>
        </b:Column>
      </b:Row>
    </b:Row>
  </b:Container>
</ui:UiBinder>